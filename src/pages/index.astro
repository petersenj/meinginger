    .preparation {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .mood {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 2rem;
        align-items: stretch;
    }

    /* Variants Section */

    .variants-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .variants-additional {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .retailers {
        background-color: #faf8f3;
    }

    .retailers p {
        text-align: center;
        font-size: 1.1rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .retailers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
        gap: 2rem;
    }

    /* Responsive Design */
    @media (max-width: 560px) {
        .cta-buttons {
            flex-direction: column;
        }
    }
</style>
