<style>
    .cta-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
    }

    .ingredients-highlight {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .ingredient-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        text-align: left;
    }

    .ingredient-card h3 {
        color: #d4af37;
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .ingredient-card p {
        color: #666;
        font-size: 0.95rem;
    }

    /* Ingredients Section */

    .ingredients-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
    }

    .ingredient {
        padding: 1.5rem;
        background: linear-gradient(135deg, #faf8f3 0%, #f5f0e8 100%);
        border-left: 4px solid #d4af37;
        border-radius: 8px;
    }

    .ingredient-percent {
        display: inline-block;
        background-color: #d4af37;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50%;
        font-weight: bold;
        margin-bottom: 1rem;
        min-width: 50px;
        text-align: center;
    }

    .ingredient-icon {
        display: block;
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .ingredient h4 {
        color: #333;
        margin: 0.5rem 0;
        font-size: 1.1rem;
    }

    .ingredient p {
        color: #666;
        font-size: 0.9rem;
        margin: 0;
    }

    /* How to Use Section */
    .how-to-use {
        background: linear-gradient(135deg, #faf8f3 0%, #f5f0e8 100%);
    }

    .preparation {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .step {
        text-align: center;
        padding: 2rem;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .step-number {
        width: 60px;
        height: 60px;
        background-color: #d4af37;
        color: white;
        font-size: 1.8rem;
        font-weight: bold;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

    .step h3 {
        font-size: 1.1rem;
        color: #333;
        margin: 0;
    }

    /* Variants Section */

    .variants-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .variant-card {
        background: #faf8f3;
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .variant-card img {
        width: 100%;
        height: 250px;
        object-fit: contain;
        margin-bottom: 1.5rem;
    }

    .variant-card h3 {
        color: #333;
        font-size: 1.3rem;
        margin: 1rem 0;
    }

    .variant-card p {
        color: #666;
        margin-bottom: 1rem;
        font-size: 0.95rem;
    }

    .price {
        color: #d4af37;
        font-weight: bold;
        font-size: 1.2rem;
        margin-top: 1rem;
    }

    .variants-additional {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .retailers {
        background-color: #faf8f3;
    }

    .retailers p {
        text-align: center;
        font-size: 1.1rem;
        margin-bottom: 2rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .retailers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
        gap: 2rem;
    }

    .retailer-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .retailer-card h3 {
        color: #d4af37;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    .retailer-card p {
        color: #666;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    /* Responsive Design */
    @media (max-width: 560px) {
        .cta-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            text-align: center;
        }

        /* Mobile Slider for tiled content */
        .preparation,
        .ingredients-highlight,
        .ingredients-list,
        .variants-grid,
        .retailers-grid {
            display: flex;
            overflow-x: auto;
            gap: 1.5rem;
            scroll-snap-type: x mandatory;
            padding-bottom: 1rem;
            -webkit-overflow-scrolling: touch;
            margin-left: -1rem;
            margin-right: -1rem;
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .step,
        .ingredient-card,
        .ingredient,
        .variant-card,
        .retailer-card {
            flex: 0 0 calc(100vw - 7.5rem);
            scroll-snap-align: center;
        }
    }
</style>
