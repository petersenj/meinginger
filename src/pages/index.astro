<style>
    main {
        overflow: hidden;
    }

    section {
        padding: 4rem 2rem;
        margin: 0 auto;
        max-width: 1200px;
        width: 100%;
    }

    h1,
    h2,
    h3 {
        margin: 0 0 1rem 0;
    }

    h2 {
        font-size: 2.5rem;
        text-align: center;
        color: var(--text-primary, #1a1a1a);
        margin-bottom: 2rem;
    }

    p {
        line-height: 1.6;
        color: var(--text-secondary, #666);
    }

    /* Hero Section */
    .hero {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: center;
        padding: 6rem 2rem;
        background: linear-gradient(135deg, #faf8f3 0%, #f5f0e8 100%);
        border-radius: 12px;
        margin-bottom: 2rem;
    }

    .hero-content h1 {
        font-size: 4rem;
        color: #d4af37;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .tagline {
        font-size: 1.8rem;
        color: #c41e3a;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .subtitle {
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 2rem;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
    }

    .btn {
        padding: 1rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .btn-primary {
        background-color: #d4af37;
        color: white;
        box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
    }

    .btn-primary:hover {
        background-color: #c41e3a;
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(196, 30, 58, 0.4);
    }

    .btn-secondary {
        background-color: transparent;
        color: #d4af37;
        border-color: #d4af37;
    }

    .btn-secondary:hover {
        background-color: #d4af37;
        color: white;
    }

    .btn-large {
        padding: 1.2rem 3rem;
        font-size: 1.1rem;
    }

    .hero-image {
        text-align: center;
    }

    .hero-image img {
        max-width: 100%;
        height: auto;
        filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.15));
    }

    .ingredients-highlight {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .ingredient-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        text-align: left;
    }

    .ingredient-card h3 {
        color: #d4af37;
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .ingredient-card p {
        color: #666;
        font-size: 0.95rem;
    }

    /* Ingredients Section */

    .ingredients-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 2rem;
    }

    .ingredient {
        padding: 1.5rem;
        background: linear-gradient(135deg, #faf8f3 0%, #f5f0e8 100%);
        border-left: 4px solid #d4af37;
        border-radius: 8px;
        transition: transform 0.3s ease;
    }

    .ingredient:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 12px rgba(212, 175, 55, 0.2);
    }

    .ingredient-percent {
        display: inline-block;
        background-color: #d4af37;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50%;
        font-weight: bold;
        margin-bottom: 1rem;
        min-width: 50px;
        text-align: center;
    }

    .ingredient-icon {
        display: block;
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .ingredient h4 {
        color: #333;
        margin: 0.5rem 0;
        font-size: 1.1rem;
    }

    .ingredient p {
        color: #666;
        font-size: 0.9rem;
        margin: 0;
    }

    /* How to Use Section */
    .how-to-use {
        background: linear-gradient(135deg, #faf8f3 0%, #f5f0e8 100%);
    }

    .preparation {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .step {
        text-align: center;
        padding: 2rem;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .step-number {
        width: 60px;
        height: 60px;
        background-color: #d4af37;
        color: white;
        font-size: 1.8rem;
        font-weight: bold;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

    .step h3 {
        font-size: 1.1rem;
        color: #333;
        margin: 0;
    }

    .tip {
        text-align: center;
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        border-left: 4px solid #c41e3a;
        margin-top: 2rem;
    }

    /* Variants Section */

    .variants-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .variant-card {
        background: #faf8f3;
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .variant-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 20px rgba(212, 175, 55, 0.2);
    }

    .variant-card img {
        width: 100%;
        height: 250px;
        object-fit: contain;
        margin-bottom: 1.5rem;
    }

    .variant-card h3 {
        color: #333;
        font-size: 1.3rem;
        margin: 1rem 0;
    }

    .variant-card p {
        color: #666;
        margin-bottom: 1rem;
        font-size: 0.95rem;
    }

    .price {
        color: #d4af37;
        font-weight: bold;
        font-size: 1.2rem;
        margin-top: 1rem;
    }

    .variants-additional {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    /* CTA Section */
    .cta-section {
        background: linear-gradient(135deg, #d4af37 0%, #c41e3a 100%);
        color: white;
        text-align: center;
    }

    .cta-section h2 {
        color: white;
    }

    .cta-section p {
        color: white;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    /* Retailers Section */
    .retailers {
        background-color: #faf8f3;
    }

    .retailers p {
        text-align: center;
        font-size: 1.1rem;
        margin-bottom: 2rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .retailers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .retailer-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .retailer-card h3 {
        color: #d4af37;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    .retailer-card p {
        color: #666;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .retailer-card a {
        color: #d4af37;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease;
    }

    .retailer-card a:hover {
        color: #c41e3a;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        section {
            padding: 2rem 1rem;
        }

        .hero {
            grid-template-columns: 1fr;
            padding: 3rem 1rem;
        }

        .hero-content h1 {
            font-size: 2.5rem;
        }

        .tagline {
            font-size: 1.4rem;
        }

        h2 {
            font-size: 1.8rem;
        }

        .cta-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            text-align: center;
        }

        .preparation {
            grid-template-columns: 1fr;
        }
    }
</style>
