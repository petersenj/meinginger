---
import '../../src/styles/globals.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
    url: string;
}

const { title, url } = Astro.props;

const seoData = {
    title: 'Mein Ginger - Ingwer-Mehrfruchtsaft online kaufen',
    description:
