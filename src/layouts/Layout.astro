    keywords: 'Ingwersaft, Ingwer-Mehrfruchtsaft, Mein Ginger, Bio-Saft, nachhaltiger Saft, Ingwer Drink, Gesundheitssaft',
    ogImage: '/images/hero-index.jpg',
    ogImageWidth: '1024',
    ogImageHeight: '688',
    ogImageAlt: 'Mein Ginger Original - Ingwer-Mehrfruchtsaft',
    ogUrl: url,
    canonical: url
};

const schemaData = {
    '@context': 'https://schema.org',
    '@type': 'Product',
    name: 'Mein Ginger',
    description: 'Hausgemachter Ingwer-Mehrfruchtsaft mit natürlichen Zutaten und viel frisch geraspeltem Ingwer.',
    image: '/images/meinginger-shot-1.webp',
    brand: {
        '@type': 'Brand',
        name: 'Mein Ginger'
    },
    offers: {
        '@type': 'AggregateOffer',
        priceCurrency: 'EUR',
        lowPrice: '4.40',
        highPrice: '6.40',
        offerCount: 4,
        offers: [
            {
                '@type': 'Offer',
                name: 'Mein Ginger Original',
                url: 'https://besseressen-ka.de/shop/mein-ginger/mein-ginger-original/',
                price: '6.40',
                priceCurrency: 'EUR',
                description: 'Ingwer-Mehrfruchtsaft mit Apfel, frischem Ingwer, Orange, Ananas, Passionsfrucht, Mango und Banane'
            },
            {
                '@type': 'Offer',
                name: 'Mein Ginger Beere',
                url: 'https://besseressen-ka.de/shop/mein-ginger/mein-ginger-beere/',
                price: '6.40',
                priceCurrency: 'EUR',
                description: 'Ingwersaft mit frischem Ingwer und fruchtiger Beeren-Note'
            },
            {
                '@type': 'Offer',
                name: 'Mein Ginger Sanddorn',
                url: 'https://besseressen-ka.de/shop/mein-ginger/mein-ginger-sanddorn/',
                price: '6.40',
                priceCurrency: 'EUR',
                description: 'Ingwersaft mit frischem Ingwer und exotischer Sanddorn-Note'
            },
            {
                '@type': 'Offer',
                name: 'Mein Ginger Spirit',
