---
import Icon from './Icon.astro';

interface Props {
    number: number;
    title: string;
    description: string;
    iconSVG?: string;
}

const { number, title, description, iconSVG } = Astro.props;
---

<div class="inspiration-card animate-on-hover" role="listitem">
    {
        iconSVG ? (
            <div class="inspiration-icon">
                <Icon svg={iconSVG} size="lg" />
            </div>
        ) : (
            <div class="inspiration-number">{number}</div>
        )
    }
    <h3>{title}</h3>
    <p>{description}</p>
</div>

<style>
    .inspiration-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        position: relative;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .inspiration-number {
        width: 50px;
        height: 50px;
        background-image: linear-gradient(135deg, var(--color-mg-original) 0%, var(--color-mg-beere) 100%);
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

    .inspiration-icon {
        display: block;
        margin-bottom: 1rem;
        text-align: center;
    }

    .inspiration-card h3 {
        color: #333;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .inspiration-card p {
        color: #666;
        font-size: 0.95rem;
        margin: 0;
    }

    @media (max-width: 560px) {
        .inspiration-card {
            padding: 1.5rem;
        }
    }
</style>
