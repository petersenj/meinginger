---
import Icon from './Icon.astro';

interface Props {
    icons?: string[];
    label?: string;
    title: string;
    description: string;
    classList?: string[];
}

const { icons, label, title, description, classList } = Astro.props;
---

<div class:list={['ingredient', 'animate-on-hover', classList]} role="listitem">
    {
        icons?.map((icon) => (
            <div class="ingredient-icon">
                <Icon name={icon} size="lg" />
            </div>
        ))
    }
    {
        label && (
            <span class="ingredient-percent" aria-label={`${label} Prozent`}>
                {label}
            </span>
        )
    }
    <h4>{title}</h4>
    <p>{description}</p>
</div>

<style>
    .ingredient {
        padding: 1.5rem;
        background: linear-gradient(135deg, #faf8f3 0%, #f5f0e8 100%);
        border-left: 4px solid var(--color-primary-punch);
        border-radius: 8px;
    }
    .highlight {
        background: linear-gradient(135deg, var(--color-mg-original) 0%, #f5f0e8 100%);
        margin-block-end: 2rem;
    }

    .ingredient-percent {
        display: inline-block;
        background-color: var(--color-primary);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50%;
        font-weight: bold;
        margin-bottom: 1rem;
        min-width: 50px;
        text-align: center;
    }

    .ingredient-icon {
        display: block;
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .ingredient h4 {
        color: #333;
        margin: 0.5rem 0;
        font-size: 1.1rem;
    }

    .ingredient p {
        color: #666;
        font-size: 0.9rem;
        margin: 0;
        max-width: none;
    }
</style>
