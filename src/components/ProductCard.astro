---
import Button from './Button.astro';

interface Props {
    image: string;
    imageAlt: string;
    title: string;
    description: string;
    price: string;
    priceLabel: string;
    buttonText?: string;
    buttonUrl: string;
    buttonAriaLabel: string;
    buttonVariant?: 'primary' | 'secondary' | 'mg-original' | 'mg-beere' | 'mg-sanddorn' | 'mg-spirit';
}

const {
    image,
    imageAlt,
    title,
    description,
    price,
    priceLabel,
    buttonText = 'Produktdetails',
    buttonUrl,
    buttonAriaLabel,
    buttonVariant = 'mg-original'
} = Astro.props;
---

<article class="variant-card">
    <img src={image} alt={imageAlt} />
    <h3>{title}</h3>
    <p>{description}</p>
    <p class="price" aria-label={priceLabel}>{price}</p>
    <Button type="external" href={buttonUrl} ariaLabel={buttonAriaLabel} variant={buttonVariant}>
        {buttonText}
    </Button>
</article>

<style>
    .variant-card {
        background: #faf8f3;
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .variant-card img {
        width: 100%;
        height: 250px;
        object-fit: contain;
        margin-bottom: 1.5rem;
    }

    .variant-card h3 {
        color: #333;
        font-size: 1.3rem;
        margin: 1rem 0;
    }

    .variant-card p {
        color: #666;
        font-size: 0.95rem;
    }

    .price {
        color: var(--color-primary);
        font-weight: bold;
        font-size: 1.2rem;
        margin-top: 1rem;
    }
</style>
