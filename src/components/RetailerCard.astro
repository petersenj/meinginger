---
import Icon from './Icon.astro';
import Button from './Button.astro';

interface Props {
    title: string;
    description?: string;
    html?: string;
    buttonText?: string;
    buttonIconSVG?: string;
    buttonUrl?: string;
    buttonAriaLabel?: string;
    iconSVG?: string;
}

const { title, description, html, buttonText, buttonIconSVG, buttonUrl, buttonAriaLabel, iconSVG } = Astro.props;
---

<div class="retailer-card" role="listitem">
    {
        iconSVG && (
            <div class="retailer-icon">
                <Icon svg={iconSVG} size="lg" />
            </div>
        )
    }
    <h3>{title}</h3>
    {description && <p>{description}</p>}
    {html && <p set:html={html} />}
    {
        buttonText && buttonUrl && (
            <Button href={buttonUrl} ariaLabel={buttonAriaLabel} variant="secondary" type="external">
                {buttonIconSVG && <Icon svg={buttonIconSVG} />}
                {buttonText}
            </Button>
        )
    }
</div>

<style>
    .retailer-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
    }

    .retailer-icon {
        color: var(--color-primary);
        margin-bottom: 1rem;
        display: flex;
        justify-content: center;
    }

    .retailer-card h3 {
        color: var(--color-primary);
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    .retailer-card p {
        color: #666;
        line-height: 1.6;
    }
</style>
